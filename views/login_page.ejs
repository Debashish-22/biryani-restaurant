<link rel="stylesheet" href="/styles/authenticate.css">

<%- include('_navbar')  %> 

<section class="login-page container-fluid ">

    <div class="login-form container col-sm-7 col-lg-4 py-4 px-3 bg-light">
        <form action="/user/create-session" method="post"> 

            <div class="mb-2">
                <label for="inputPhone" class="form-label">Phone Number</label>
                <input type="text" autocomplete="off" class="form-control" name="phone" id="inputPhone" aria-describedby="emailHelp" maxlength="10" required>
            </div>

            <div class="mb-3">
              <label for="inputPassword" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" id="inputPassword" required>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn bg-red text-light br-10 fw-600">Log in</button>
            </div>
          </form>
    </div>
</section>
