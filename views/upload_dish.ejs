
<section class="upload-page container-fluid">

    <div class="upload-dish-form container col-sm-7 col-lg-4 py-4 px-3 bg-light br-20 mt-3 mb-5 shadow">
        <form action="/admin/create-dish" method="post" enctype="multipart/form-data">

            <div class="mb-2">
                <label for="inputName" class="form-label">Dish Name</label>
                <input type="text" autocomplete="off" class="form-control" name="name" id="inputName"
                    aria-describedby="emailHelp" required>
            </div>

            <div class="mb-2">
                <label for="inputDesription" class="form-label">Description</label>
                <input type="text" autocomplete="off" class="form-control" name="description" id="inputDesription"
                    aria-describedby="emailHelp"  required>
            </div>

            <div class="mb-3">
                <label for="inputPrice" class="form-label">Price</label>
                <input type="text" autocomplete="off" class="form-control" maxlength="5" name="price" id="inputPrice" required placeholder="e.g: 300">
            </div>

            <input name="foodImg" class="form-control me-2 mb-3" type="file" required>

            <div class="text-center">
                <button type="submit" class="btn bg-red text-light br-10 fw-600">Create Dish</button>
            </div>
        </form>
    </div>
</section>