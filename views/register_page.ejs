<link rel="stylesheet" href="/styles/authenticate.css">

<%- include('_navbar')  %>

<section class="register-page container-fluid ">

  <div class="register-form container col-sm-7 col-lg-4 py-4 px-3 bg-light mt-3 mb-5">
    <form action="/user/create-user" method="post">

      <div class="mb-2">
        <label for="inputName" class="form-label">Name</label>
        <input type="text" autocomplete="off" class="form-control" name="name" id="inputName"
          aria-describedby="emailHelp" maxlength="15" required>
      </div>

      <div class="mb-2">
        <label for="inputPhone" class="form-label">Phone Number</label>
        <input type="text" autocomplete="off" class="form-control" name="phone" id="inputPhone"
          aria-describedby="emailHelp" maxlength="10" required>
      </div>

      <div class="mb-3">
        <label for="inputPassword" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="inputPassword" required>
      </div>

      <div class="mb-3">
        <label for="inputConfirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" name="confirmPassword" id="inputConfirmPassword" required>
      </div>

      <div class="mb-2">
        <label for="inputAddress" class="form-label">Address</label>
        <input type="text" autocomplete="off" class="form-control" name="address" id="inputAddress"
          aria-describedby="emailHelp" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn bg-red text-light br-10 fw-600">Register</button>
      </div>
    </form>
  </div>
</section>